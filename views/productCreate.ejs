     <h1>AGREGAR PRODUCTO</h1>
       
       <form class="formato-formulario" action="/productCreate" enctype="multipart/form-data" 
       method="POST" class="create-form">
        <div class="control-formulario">
            <label>Nombre del Producto</label>
            <br>
            <br>
            <input type="text" name="nombre_producto" class="placeholder" placeholder="Ingrese nombre del producto a publicar"
            value="<%= locals.oldData ? oldData.nombre_producto : null %>">
            <% if (locals.errors && errors.nombre_producto) { %>
                <div class="text-danger">
                    <%= errors.nombre_producto.msg %> 
                </div>
            <% } %>
        </div>
        <br>
        <div class="control-formulario">
            <label>Valor</label>
            <br>
            <br>
            <input type="text" name="valor" class="placeholder" placeholder="Indique el valor del producto a publicar"
            value="<%= locals.oldData ? oldData.valor : null %>">
            <% if (locals.errors && errors.valor) { %>
                <div class="text-danger">
                    <%= errors.valor.msg %> 
                </div>
            <% } %>
       
        </div>
        <div class="control-formulario">
            <label>Localidad</label>
            <br>
            <br>
            <input type="text" name="ubicacion" class="placeholder" placeholder="Indique la localiad donde se encuentra el producto"
            value="<%= locals.oldData ? oldData.ubicacion : null %>">
            <% if (locals.errors && errors.ubicacion) { %>
                <div class="text-danger">
                    <%= errors.ubicacion.msg %> 
                </div>
            <% } %>
        </div>
        <div class="control-formulario">
            <label for="">¿Es nuevo o usado?</label>
            <br>
            <br>
            <label for="">Usado</label>
            <input type="radio" name="usado" value="true">
            <label for="">Nuevo</label>
            <input type="radio" name="usado" value="false">
        </div>

        <br>
        <div class="control-formulario">
            <label>Descripcion</label>
            <br>
            <br>
            <input type="text" name="descripcion" class="placeholder" placeholder="Indique una breve descripcion del producto"
            value="<%= locals.oldData ? oldData.descripcion : null %>">
            <% if (locals.errors && errors.descripcion) { %>
                <div class="text-danger">
                    <%= errors.descripcion.msg %> 
                </div>
            <% } %>
        </div>
