        <br>
        <div class="control-formulario">
            <label>Fotos del Producto</label>
            <input type="file" name="imagen">
            <% if (locals.errors && errors.imagen) { %>
                <div class="text-danger">
                    <%= errors.imagen.msg %>
                </div>
            <% } %>
        </div>
